<script type="text/javascript" language="javascript">
    function loaderOn() {
        $("#load").css("display", "normal");
        $("#faca").css("display", "none");
    }
    function loaderOff() {
        $("#load").css("display", "none");
        $("#faca").css("display", "normal");
    }

    function menuClick(id_clicked) {
        $('#pagina').val(id_clicked);
        $('#menu-form').submit();
    }
</script>

@using (Ajax.BeginForm("Desktop", "Desktop", new AjaxOptions
                {
                    HttpMethod = "POST",
                    InsertionMode = InsertionMode.Replace,
                    UpdateTargetId = "frame",
                    LoadingElementId = "load",
                    OnBegin = "loaderOn",
                    OnSuccess = "loaderOff"
                }, new { id = "menu-form" }))
{
    <input type="hidden" name="pagina" id="pagina" />
    <div id="background">
        <!-- INÍCIO DO CABEÇALHO MÓVEL -->
        <div class="navbar-fixed-top">
            <div class="nav div-padding-silver navbar-inverse" id="cabecalho">
                <div class="col-md-12 div-padding-whitesmoke">
                    <div class="container col-md-12">
                        <div class="row">
                            <div class="col-md-11 hidden-sm hidden-xs" style="margin-left: -15px; margin-right: -20px">
                                <div class="img-logo-top-left navbar navbar-default navbar-static-top">
                                    <div class="col-md-1">
                                        <div class="col-xs-9 col-sm-4 hidden-md hidden-lg">
                                            <a href="#" class="img-logo-top-left">
                                                <img src="~/Content/images/brasao-d&a.png" class="img-responsive" width="30">
                                            </a>
                                        </div>
                                        <div class="hidden-xs hidden-sm">
                                            <a href="Desktop" class="">
                                                <img src="~/Content/images/brasao-d&a.png" class="img-responsive" width="50">
                                            </a>
                                        </div>
                                        <div class="img-logo-top-left col-sm-8 hidden-xs hidden-md hidden-lg">
                                            <h4 style="color: whitesmoke">@@{Nome do Usuário da Sessão no Sistema}</h4>
                                        </div>
                                    </div>
                                    <div class="col-md-4 img-logo-top-left"><span style="color: whitesmoke">@@{Nome do Usuário da Sessão no Sistema}</span></div>
                                    <div class="col-md-6">
                                        <form class="form-horizontal" role="form">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <div class="input-group col-md-12">
                                                        <input type="search" class="form-control" id="busca" placeholder="Faça sua busca!">
                                                        <span class="input-group-btn">
                                                            <input class="btn btn-default" type="submit" value="Buscar">
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-1 hidden-sm hidden-xs img-logo-top-left">
                                <div class="input-group text-right col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                    <button class="btn btn-danger btn-sm">Sair</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- INÍCIO DO MENU VERTICAL -->
            <div class="col-lg-2 col-md-2 col-sm-4 hidden-xs section div-padding-silver menu-vertical">
                <div class="panel-group">
                    <!---->
                    <div class="panel panel-default border-none">
                        <div class="btn btn-block btn-default panel-heading" id="Mesas" onclick="menuClick(this.id)">
                            <div class="btn-flat">
                                <i class="fa fa-th-large fa-lg pull-left text-muted"></i>
                                <h4 class="panel-title">MESAS</h4>
                            </div>
                        </div>
                    </div>
                    <!---->
                    <div class="panel panel-default border-none">
                        <div class="btn btn-block btn-default panel-heading" id="Jogadores" onclick="menuClick(this.id)">
                            <div class="btn-flat">
                                <i class="fa fa-lg fa-gamepad pull-left text-muted"></i>
                                <h4 class="panel-title">JOGADORES</h4>
                            </div>
                        </div>
                    </div>
                    <!---->
                    <div class="panel panel-default border-none">
                        <div class="btn btn-block btn-default panel-heading" id="Fichas" onclick="menuClick(this.id)">
                            <div class="btn-flat">
                                <i class="fa fa-lg fa-file-text pull-left text-muted"></i>
                                <h4 class="panel-title">FICHAS</h4>
                            </div>
                        </div>
                    </div>
                    <!---->
                    <div class="panel panel-default border-none">
                        <div class="btn btn-block btn-default panel-heading" id="Contatos" onclick="menuClick(this.id)">
                            <div class="btn-flat">
                                <i class="fa fa-lg fa-users pull-left text-muted"></i>
                                <h4 class="panel-title">CONTATOS</h4>
                            </div>
                        </div>
                    </div>
                    <!---->
                    <div class="panel panel-default border-none">
                        <div class="btn btn-block btn-default panel-heading" id="Ajustes" onclick="menuClick(this.id)">
                            <div class="btn-flat">
                                <i class="fa fa-lg fa-gears pull-left text-muted"></i>
                                <h4 class="panel-title">AJUSTES</h4>
                            </div>
                        </div>
                    </div>
                    <!---->
                </div>
            </div>
            <!-- FIM DO MENU VERTICAL -->
        </div>
        <!-- FIM DO CABEÇALHO MÓVEL -->
        <!-- INÍCIO DO CABEÇALLHO IMÓVEL -->
        <div class="nav div-padding-silver" id="cabecalho-imovel">
            <div class="col-md-12 div-padding-whitesmoke">
                <div class="col-md-2 center-block">
                    <a href="#" class="img-logo-top-left">
                        <img src="" class="img-responsive" width="28">
                    </a>
                </div>
                <div class="container col-md-10">
                    <div class="row">
                        <div class="col-md-11 hidden-sm hidden-xs"></div>
                        <div class="col-md-1 hidden-sm hidden-xs img-logo-top-left"></div>
                    </div>
                </div>
            </div>
        </div>
        <!-- FIM DO CABEÇALHO IMÓVEL -->
        <div class="container-fluid parallax">
            <!-- INÍCIO DO FRAME PRINCIPAL -->
            <div class="col-lg-10 col-md-10 col-sm-8 div-padding-silver col-lg-offset-2 col-md-offset-2 col-sm-offset-4" id="frame"></div>
            <!-- FIM DO FRAME PRINCIPAL -->
        </div>
    </div>
}
@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}