@model RPG_Remix.Models.Fachada.UsuarioFacade

@{
    string msgCad = "";
    if (ViewBag.MsgCadastro != null)
    {
        if (ViewBag.MsgCadastro.Contains("Erro"))
        {
            msgCad = "<ul><li><span class='text-form text-danger'>" + ViewBag.MsgCadastro + "</span></li></ul>";
        }
        else
        {
            msgCad = "<ul><li><span class='text-form text-primary'>" + ViewBag.MsgCadastro + "</span></li></ul>";
        }
    }
}

<div class="large-ocean">
    <div class="estrutura">
        <div class="conteudo borda">
            <div class="conteudo">
                <fieldset>
                    <legend>Entrada</legend>
                    @using (Html.BeginForm("Entrar", "Entrada", FormMethod.Post))
                    {
                        @*@Html.ValidationSummary()*@
                        @msgCad
                        <div class="form-group">
                            <label class="control-label" for="Email"><span class="text-form">E-mail</span> <span class="text-danger">*</span> @Html.ValidationMessageFor(model => model.UsuarioEntrarModel.Email)</label>
                            @Html.TextBoxFor(model => model.UsuarioEntrarModel.Email, new { @class = "form-control", placeholder = "exemplo@email.com" })
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="Senha"><span class="text-form">Senha</span> <span class="text-danger">*</span> @Html.ValidationMessageFor(model => model.UsuarioEntrarModel.Senha)</label>
                            @Html.TextBoxFor(model => model.UsuarioEntrarModel.Senha, new { type = "password", @class = "form-control", placeholder = "*********" })
                        </div>
                        <button type="submit" class="btn btn-block btn-flat-no-radius btn-primary">ENTRAR</button>
                    }
                    <hr />
                    <div class="text-right">
                        <a class="btn btn-xs btn-begin btn-block" data-toggle="modal" href="#cadastro">CADASTRAR-SE</a>
                    </div>
                    <div class="modal fade" id="cadastro">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                @using (Html.BeginForm("Cadastrar", "Entrada", FormMethod.Post))
                                {
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                        <h3 class="modal-title">CADASTRO</h3>
                                    </div>
                                    <div class="modal-body">
                                        <div class="form-group">
                                            @*@Html.ValidationSummary()*@
                                            <div class="form-input-left">
                                                <div class="form-group">
                                                    <label class="control-label" for="Nome">Nome <span class="text-danger">*</span>  @Html.ValidationMessageFor(model => model.UsuarioCadastrarModel.Nome)</label>
                                                    @Html.TextBoxFor(model => model.UsuarioCadastrarModel.Nome, new { @class = "form-control", placeholder = "seu nome" })
                                                </div>
                                            </div>
                                            <div class="form-input-right">
                                                <div class="form-group">
                                                    <label class="control-label" for="Foto">Insira uma Foto</label>
                                                    <label class="btn btn-default btn-block btn-file">
                                                        Clique <input type="file" id="Foto" name="Foto" style="display: none" />
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-input-left">
                                            <div class="form-group">
                                                <label class="control-label" for="Email">E-mail <span class="text-danger">*</span> @Html.ValidationMessageFor(model => model.UsuarioCadastrarModel.Email)</label>
                                                @Html.TextBoxFor(model => model.UsuarioCadastrarModel.Email, new { @class = "form-control", placeholder = "exemplo@email.com" })
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label" for="Senha">Senha <span class="text-danger">*</span> @Html.ValidationMessageFor(model => model.UsuarioCadastrarModel.Senha)</label>
                                                @Html.TextBoxFor(model => model.UsuarioCadastrarModel.Senha, new { type = "password", @class = "form-control", placeholder = "*********" })
                                            </div>
                                        </div>
                                        <div class="form-input-right">
                                            <div class="form-group">
                                                <label class="control-label" for="DataNascimento">Data de Nascimento</label>
                                                @Html.TextBoxFor(model => model.UsuarioCadastrarModel.DataNascimento, new { @class = "form-control", placeholder = "01/01/2016" })
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label" for="RepSenha">Repita a Senha <span class="text-danger">*</span> @Html.ValidationMessageFor(model => model.UsuarioCadastrarModel.RepSenha)</label>
                                                @Html.TextBoxFor(model => model.UsuarioCadastrarModel.RepSenha, new { type = "password", @class = "form-control", placeholder = "*********" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-lg-12 col-md-12" for="Sexo">Sexo <span class="text-danger">*</span> @Html.ValidationMessageFor(model => model.UsuarioCadastrarModel.Sexo)</label>
                                            <label class="radio-inline">
                                                @Html.RadioButtonFor(model => model.UsuarioCadastrarModel.Sexo, 'M') Masculino
                                            </label>
                                            <label class="radio-inline">
                                                @Html.RadioButtonFor(model => model.UsuarioCadastrarModel.Sexo, 'F') Feminino
                                            </label>
                                            <label class="radio-inline">
                                                @Html.RadioButtonFor(model => model.UsuarioCadastrarModel.Sexo, 'O') Outro
                                            </label>
                                        </div>
                                        <div class="form-group">
                                            @Html.TextAreaFor(model => model.UsuarioCadastrarModel.Descricao, 5, 10, new { @class = "form-control", placeholder = "Descreva-se um pouco..." })
                                            @Html.ValidationMessageFor(model => model.UsuarioCadastrarModel.Descricao)
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="submit" class="btn btn-flat-no-radius btn-primary">CADASTRAR</button>
                                        <button type="reset" class="btn btn-flat-no-radius btn-danger" data-dismiss="modal">Cancelar</button>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </fieldset>
            </div>
        </div>
    </div>
</div>
<script>
    jQuery(function ($) {
        $('#UsuarioCadastrarModel_DataNascimento').mask('99/99/9999');
    });
</script>
@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}
