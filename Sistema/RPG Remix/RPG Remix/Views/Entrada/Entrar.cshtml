@model RPG_Remix.Models.Fachada.UsuarioFacade

<div class="estrutura">
    <div class="conteudo borda">
        <div class="conteudo">
            <fieldset>
                <legend>Entrada</legend>
                @using (Html.BeginForm("Entrar", "Entrada", FormMethod.Post, new { id = "frmPost" }))
                {
                    <div class="form-group">
                        <label class="control-label" for="Email">E-mail</label>
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "exemplo@email.com" })
                    </div>
                    <div class="form-group">
                        <label class="control-label" for="Senha">Senha</label>
                        @Html.TextBoxFor(model => model.Senha, new { @class = "form-control", placeholder = "*********" })
                    </div>
                    <button type="submit" class="btn btn-block btn-flat-no-radius btn-primary">ENTRAR</button>
                }
            </fieldset>
        </div>
    </div>
</div>
@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}
