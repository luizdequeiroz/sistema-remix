                        <input type="number" name="capacidades[8].Teste" id="capacidades[8].Teste" min="0" class="form-control pecu-test" placeholder="teste" />
                    </div>
                </fieldset>
                <fieldset class="panel-form col-md-4">
                    <legend class="text-whitesmoke">Perícias</legend>
                    <div class="form-group-sm form-inline group-test">
                        <input type="text" name="pericias[0].Nome" id="pericias[0].Nome" class="form-control pecu-name" placeholder="nome da perícia" />
